<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All health benefits
    </h1>

    <a href="/health_benefits/new" class="btn btn-block btn-outline-secondary">
      Add a new health benefit
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "health_benefit_templates/health_benefits_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @health_benefits.each do |health_benefit| %>
      <tr>
        <td>
          <%= health_benefit.id %>
        </td>

        <td>
          <%= health_benefit.name %>
        </td>

        <td>
          <%= time_ago_in_words(health_benefit.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(health_benefit.updated_at) %> ago
        </td>

        <td>
          <a href="/health_benefits/<%= health_benefit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @health_benefits, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
