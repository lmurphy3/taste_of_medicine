<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorite Recipes

    <a data-toggle="collapse" href="#recipe_favorite_recipes_new_form">
      Add favorite recipe
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @recipe.favorite_recipes.each do |favorite_recipe| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/favorite_recipes/<%= favorite_recipe.id %>">
          <%= favorite_recipe.user_id %>
        </a>

        <%if current_user == favorite_recipe.user %>
          <a href="/delete_favorite_recipe_from_recipe/<%= favorite_recipe.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="recipe_favorite_recipes_new_form">
        <%= render partial: "recipe_templates/recipe_favorite_recipes_new_form" %>
      </div>
    </div>

  </ul>
</div>
