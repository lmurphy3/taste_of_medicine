<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All favorite recipes
    </h1>

    <a href="/favorite_recipes/new" class="btn btn-block btn-outline-secondary">
      Add a new favorite recipe
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "favorite_recipe_templates/favorite_recipes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Recipe
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @favorite_recipes.each do |favorite_recipe| %>
      <tr>
        <td>
          <%= favorite_recipe.id %>
        </td>

        <td>
          <% if favorite_recipe.user.present? %>
            <a href="/users/<%= favorite_recipe.user.id %>">
              <%= favorite_recipe.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if favorite_recipe.recipe.present? %>
            <a href="/recipes/<%= favorite_recipe.recipe.id %>">
              <%= favorite_recipe.recipe.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(favorite_recipe.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(favorite_recipe.updated_at) %> ago
        </td>

        <td>
          <a href="/favorite_recipes/<%= favorite_recipe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @favorite_recipes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
