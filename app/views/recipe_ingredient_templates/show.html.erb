<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Recipe ingredient #<%= @recipe_ingredient.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/recipe_ingredients" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/recipe_ingredients/<%= @recipe_ingredient.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit recipe ingredient
        </a>
      </div>

      <div class="col">
        <a href="/delete_recipe_ingredient/<%= @recipe_ingredient.id %>" class="btn btn-block btn-outline-secondary">
          Delete recipe ingredient
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Recipe
      </dt>
      <dd>
        <% if @recipe_ingredient.recipe.present? %>
          <a href="/recipes/<%= @recipe_ingredient.recipe_id %>">
            <%= @recipe_ingredient.recipe.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Ingredient
      </dt>
      <dd>
        <% if @recipe_ingredient.ingredient.present? %>
          <a href="/ingredients/<%= @recipe_ingredient.ingredient_id %>">
            <%= @recipe_ingredient.ingredient.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@recipe_ingredient.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@recipe_ingredient.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

