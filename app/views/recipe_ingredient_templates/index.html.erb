<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All recipe ingredients
    </h1>

    <a href="/recipe_ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new recipe ingredient
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "recipe_ingredient_templates/recipe_ingredients_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipe
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @recipe_ingredients.each do |recipe_ingredient| %>
      <tr>
        <td>
          <%= recipe_ingredient.id %>
        </td>

        <td>
          <% if recipe_ingredient.recipe.present? %>
            <a href="/recipes/<%= recipe_ingredient.recipe.id %>">
              <%= recipe_ingredient.recipe.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if recipe_ingredient.ingredient.present? %>
            <a href="/ingredients/<%= recipe_ingredient.ingredient.id %>">
              <%= recipe_ingredient.ingredient.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(recipe_ingredient.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(recipe_ingredient.updated_at) %> ago
        </td>

        <td>
          <a href="/recipe_ingredients/<%= recipe_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @recipe_ingredients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
