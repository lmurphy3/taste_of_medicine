<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All recipe ingredients
    </h1>

    <a href="/recipe_ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new recipe ingredient
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipe
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @recipe_ingredients.each do |recipe_ingredient| %>
      <tr>
        <!-- Display recipe_ingredient.id start -->
        <td>
          <%= recipe_ingredient.id %>
        </td>
        <!-- Display recipe_ingredient.id end -->

        <!-- Display recipe_ingredient.recipe_id start -->
        <td>
          <%= recipe_ingredient.recipe.created_at %>
        </td>
        <!-- Display recipe_ingredient.recipe_id end -->

        <!-- Display recipe_ingredient.ingredient_id start -->
        <td>
          <%= recipe_ingredient.ingredient.name %>
        </td>
        <!-- Display recipe_ingredient.ingredient_id end -->

        <!-- Display recipe_ingredient.created_at start -->
        <td>
          <%= time_ago_in_words(recipe_ingredient.created_at) %> ago
        </td>
        <!-- Display recipe_ingredient.created_at end -->

        <!-- Display recipe_ingredient.updated_at start -->
        <td>
          <%= time_ago_in_words(recipe_ingredient.updated_at) %> ago
        </td>
        <!-- Display recipe_ingredient.updated_at end -->

        <td>
          <a href="/recipe_ingredients/<%= recipe_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @recipe_ingredients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
