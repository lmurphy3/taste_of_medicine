<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ingredient Health Benefits

    <a data-toggle="collapse" href="#ingredient_ingredient_health_benefits_new_form">
      Add ingredient health benefit
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @ingredient.ingredient_health_benefits.each do |ingredient_health_benefit| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/ingredient_health_benefits/<%= ingredient_health_benefit.id %>">
          <%= ingredient_health_benefit.created_at %>
        </a>

        <a href="/delete_ingredient_health_benefit_from_ingredient/<%= ingredient_health_benefit.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="ingredient_ingredient_health_benefits_new_form">
        <%= render partial: "ingredient_templates/ingredient_ingredient_health_benefits_new_form" %>
      </div>
    </div>

  </ul>
</div>
