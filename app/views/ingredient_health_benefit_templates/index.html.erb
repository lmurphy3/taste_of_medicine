<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ingredient health benefits
    </h1>

    <a href="/ingredient_health_benefits/new" class="btn btn-block btn-outline-secondary">
      Add a new ingredient health benefit
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "ingredient_health_benefit_templates/ingredient_health_benefits_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Ingredient
        </th>

        <th>
          Health benefit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ingredient_health_benefits.each do |ingredient_health_benefit| %>
      <tr>
        <td>
          <%= ingredient_health_benefit.id %>
        </td>

        <td>
          <% if ingredient_health_benefit.ingredient.present? %>
            <a href="/ingredients/<%= ingredient_health_benefit.ingredient.id %>">
              <%= ingredient_health_benefit.ingredient.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if ingredient_health_benefit.health_benefit.present? %>
            <a href="/health_benefits/<%= ingredient_health_benefit.health_benefit.id %>">
              <%= ingredient_health_benefit.health_benefit.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(ingredient_health_benefit.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(ingredient_health_benefit.updated_at) %> ago
        </td>

        <td>
          <a href="/ingredient_health_benefits/<%= ingredient_health_benefit.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ingredient_health_benefits, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
