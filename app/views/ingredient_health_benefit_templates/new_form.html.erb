<h1>
  Add a new ingredient health benefit
</h1>


<hr>

<form action="/create_ingredient_health_benefit" method="post">

  <div class="form-group">
    <label for="ingredient_id">
      Ingredient
    </label>

    <%= select_tag(:ingredient_id, options_from_collection_for_select(Ingredient.all, :id, :name, @ingredient_health_benefit.ingredient_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="health_benefit_id">
      Health benefit
    </label>

    <%= select_tag(:health_benefit_id, options_from_collection_for_select(HealthBenefit.all, :id, :name, @ingredient_health_benefit.health_benefit_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create ingredient health benefit
  </button>
</form>

<hr>

<a href="/ingredient_health_benefits">
  Go back
</a>
